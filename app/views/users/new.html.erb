<div class="main new-main">
  <div class="post-new">
    <h1>新規ユーザー登録</h1>
    <%= form_with url: "/users/create" do |f| %>
      <div class="form">
        <div class="form-body">
            <% @user.errors.full_messages.each do |message| %>
              <div class="form-error">
                <%= message %>
              </div>
            <% end %>  

           <%= f.label :name %>
           <%= f.text_field :name, value: @user.name %><br>
           <%= f.label :email %>
           <%= f.email_field :email, value: @user.email %><br>
           <%= f.label :パスワード %>
           <%= f.password_field :password, value: @user.password %><br>
           <%= f.submit "新規登録" %>
        </div>
      </div>
    <% end %>
  </div>
</div>